{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["./AGENTS.md"],
  "lsp": {
    "sol-lsp": {
      "command": ["nomicfoundation-solidity-language-server", "--stdio"],
      "extensions": [".sol"]
    }
  },
  "provider": {
    "openrouter": {
      "models": {
        "qwen/qwen3-coder": {
          "options": {
            "provider": {
              "only": ["chutes/fp8"]
            }
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "temperature": 0.35,
            "textVerbosity": "low",
            "reasoningEffort": "high",
            "thinking": {
              "type": "enabled",
              "budgetTokens": 4096
            }
          }
        }
      }
    }
  },
  "mcp": {
    "browsermcp": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "@browsermcp/mcp@latest"]
    }
  },
  "permission": {
    "skill": {
      "experts": "allow",
      "exploratory-architect": "allow",
      "deterministic-coder": "allow",
      "expert-researcher": "allow",
      "creative-coder": "allow",
      "*": "allow"
    }
  }
}
