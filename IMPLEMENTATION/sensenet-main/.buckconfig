# â„µ-0xFF Buck2 Configuration
#
# Hermetic builds with Nix store paths.
# Toolchain paths are set in .buckconfig.local (generated by nix develop).

[cells]
root = .
prelude = nix/build/prelude
straylight_prelude = prelude
aleph = prelude
toolchains = toolchains
none = none

[cell_aliases]
config = prelude
ovr_config = prelude
fbcode = none
fbsource = none
fbcode_macros = none
buck = none

[parser]
target_platform_detector_spec = target:root//...->prelude//platforms:default

[buck2]
materializations = deferred
digest_algorithms = BLAKE3

[build]
execution_platforms = toolchains//:local
