{
  // Disable “electric” auto-closing behavior
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",

  // Reduce bracket visuals
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,

  // Turn off suggestions/inline helpers
  "editor.parameterHints.enabled": false,
  "editor.inlineSuggest.enabled": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },

  // Diagnostics on, but render none in the editor (no underlines)
  "editor.renderValidationDecorations": "off",
  "problems.decorations.enabled": false,
  "editor.showUnused": false,
  "editor.lightbulb.enabled": "off",
  "editor.codeLens": false,
  "editor.inlayHints.enabled": "off",
  "editor.links": false,

  // Keep analysis/validation enabled (we're only changing how it looks)
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  "eslint.enable": true,
  "css.validate": true,
  "scss.validate": true,
  "less.validate": true,
  // Do not override theme palette colors
  "workbench.colorCustomizations": {},

  // Keep visuals cleaner
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.occurrencesHighlight": "off",
  "editor.semanticHighlighting.enabled": false,

  // Optional: avoid surprise formatting
  "editor.formatOnType": false,
  "editor.formatOnSave": false,

  // Python path configuration for new src/lattice/ structure
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.stubPath": "${workspaceFolder}/src",
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursorpyright.analysis.diagnosticMode": "workspace",
  "cursorpyright.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],
  "cursorpyright.analysis.stubPath": "${workspaceFolder}/src",
  "cursorpyright.analysis.typeCheckingMode": "basic",

  // MEMORY OPTIMIZATION: Prevent OOM errors
  // TypeScript/JavaScript language server memory limits
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/dist",
      "**/build",
      "**/.vscode",
      "**/web/js",
      "**/__pycache__",
      "**/.venv",
      "**/venv",
      "**/__tests__",
      "**/test",
      "**/tests",
      "**/docs",
      "**/leancomfy",
      "**/.nix"
    ]
  },
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.preferences.useLabelDetailsInCompletionEntries": false,
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  
  // Reduce file watching overhead
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/web/js/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.nix/**": true,
    "**/flake.lock": true
  },
  
  // Search exclusions to reduce indexing overhead
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/web/js": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/venv": true,
    "**/.git": true,
    "**/flake.lock": true,
    "**/.nix": true
  },
  
  // Python/Pyright memory optimization
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.indexing": false,
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 1,
      "includeAllSymbols": false
    }
  ],
  
  // Cursor-specific memory optimizations
  "cursor.chat.maxContextLength": 50000,
  "cursor.general.maxOpenFiles": 20
}
